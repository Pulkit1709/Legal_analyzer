FROM python:3.12-slim
ENV PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1
WORKDIR /app
COPY requirements.txt ./
RUN pip install --no-cache-dir streamlit==1.38.0 pandas==2.2.2 requests==2.32.3 pymupdf==1.24.9
COPY . .
EXPOSE 8501
CMD ["python", "-m", "streamlit", "run", "app/streamlit_app.py", "--server.headless", "true", "--server.port", "8501"]
